<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android_crt288br.MainActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="386dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="18dp"
            android:text="端口号:" />

        <Button
            android:id="@+id/buttonOpenDev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/editText1"
            android:text="打开设备" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_toLeftOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView1"
            android:ems="10"
            android:text="/dev/ttyS2" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonOpenUsbDev"
            android:layout_centerHorizontal="true"
            android:text="波特率:" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:ems="10"
            android:text="9600" />

        <Button
            android:id="@+id/buttonGetCardStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/buttonOpenDev"
            android:text="获取卡状态" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonOpenUsbDev"
            android:layout_toRightOf="@+id/buttonGetCardStatus"
            android:text="卡操作" />

        <Button
            android:id="@+id/buttonInitDev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/buttonOpenUsbDev"
            android:layout_alignBottom="@+id/buttonOpenUsbDev"
            android:layout_toRightOf="@+id/buttonOpenUsbDev"
            android:text="初始化" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_toRightOf="@+id/button1"
            android:text="SIM卡操作" />

        <Button
            android:id="@+id/buttonOpenUsbDev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonGetCardStatus"
            android:layout_toLeftOf="@+id/button2"
            android:text="打开USB" />

        <Button
            android:id="@+id/buttonCloseDev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/buttonGetCardStatus"
            android:text="关闭设备" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:layout_below="@+id/buttonCloseDev"
            android:ems="10"
            android:text="输入写卡数据" />

        <Button
            android:id="@+id/buttonwrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写卡"
            android:layout_below="@+id/editText3"
            android:layout_toRightOf="@+id/button1"
            android:layout_toEndOf="@+id/button1" />

        <Button
            android:id="@+id/buttonread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读卡"
            android:layout_below="@+id/editText3"
            android:layout_toLeftOf="@+id/button1"
            android:layout_toStartOf="@+id/button1" />

    </RelativeLayout>

</FrameLayout>

